    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('access_token', response.access_token);",
                  "    pm.environment.set('token_type', response.token_type);",
                  "    ",
                  "    // Calculate expiry time",
                  "    const currentTime = Math.floor(Date.now() / 1000);",
                  "    const expiryTime = currentTime + response.expires_in;",
                  "    pm.environment.set('token_expiry', expiryTime);",
                  "    ",
                  "    console.log('User registered and token saved');",
                  "} else {",
                  "    console.log('Registration failed:', pm.response.text());",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"{{test_email}}\",\n    \"username\": \"{{test_username}}\",\n    \"full_name\": \"{{test_full_name}}\",\n    \"password\": \"{{test_password}}\"\n}"
            },
