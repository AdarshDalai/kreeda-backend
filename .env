# Kreeda Backend Development Environment Configuration
DEBUG=true
APP_NAME="Kreeda Backend Dev"
APP_VERSION="0.1.0"
ENVIRONMENT=development
PORT=8000

# Database Configuration - Local PostgreSQL with async driver
DATABASE_URL=postgresql+asyncpg://kreeda_user:kreeda_password@localhost:5432/kreeda_dev

# Local Development - No Supabase
SUPABASE_URL=http://localhost:3000
SUPABASE_ANON_KEY=dev-anon-key
SUPABASE_SERVICE_ROLE_KEY=dev-service-key

# Local Storage (or use Cloudflare R2 for dev too)
R2_ACCESS_KEY_ID=dev-access-key
R2_SECRET_ACCESS_KEY=dev-secret-key
R2_ACCOUNT_ID=dev-account-id
R2_BUCKET_NAME=kreeda-dev
R2_ENDPOINT_URL=http://localhost:9000

# Local Redis
REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_TOKEN=dev-token

# Security - Different keys for dev
SECRET_KEY=dev-secret-key-for-development-only-not-for-production
JWT_SECRET_KEY=dev-jwt-secret-key-for-development-only-not-for-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Origins - Allow all for development
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000"]

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=console

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=10
